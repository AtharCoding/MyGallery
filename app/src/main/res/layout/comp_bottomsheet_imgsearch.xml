<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:background="@color/White"    android:layout_width="match_parent"    android:paddingBottom="10dp"    android:paddingTop="10dp"    android:layout_height="match_parent">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/search_by_image"        android:textSize="24dp"        android:textAlignment="center"/>    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="@color/light_grey" />    <ImageView        android:id="@+id/bottomSheetImgSerachImgView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingBottom="10dp"        android:paddingTop="10dp"        />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="@color/light_grey" />    <Button        android:id="@+id/bottomSheetImgSerachBtnUpload"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/start_upload"        /></LinearLayout>